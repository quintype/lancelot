{
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended",
    "prettier/react",
    "prettier/standard"
  ],
  "plugins": ["react", "standard", "jest", "cypress"],
  "env": {
    "cypress/globals": true
  },
  "parser": "babel-eslint",
  "rules": {
    "jest/valid-expect": 0,
    "max-len": ["warn", { "code": 120 }]
  },
  "settings": {
    "react": {
      "version": "16.2"
    }
  }
}
